{
  "extends": "../../tsconfig.base.json",
  "include": ["./src"],
  "tstl": {
    "luaTarget": "5.3",
    "luaBundleEntry": "./src/index.ts",
    "noHeader": true,
    "buildMode": "library"
  },
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "types": [
      "@typescript-to-lua/language-extensions",
      "isaac-typescript-definitions",
      "node",
      "vitest/globals"
    ]
  }
}
